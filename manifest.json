{
  "manifest_version": 3,
  "name": "EZPiP",
  "description": "A browser extension to easily put the tab videos in picture-and-picture.",
  "version": "0.0.1",
  "action": {
    "default_popup": "src/index.html",
    "default_icon": "src/resources/ezpip-logo-minimal.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/scripts/content.js"
      ]
    }
  ]
}
